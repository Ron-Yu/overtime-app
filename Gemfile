source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'L
gem 'rails', '4.2.7.1'
# Use postgresql as the database for Active RecordL
gem 'pg', '~> 0.15'
# Use SCSS for stylesheetsL
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assetsL
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and viewsL
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/rails/execjs#readme for more supported runtimesL
# gem 'therubyracer', platforms: :rubyL

# Use jquery as the JavaScript libraryL
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinksL
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilderL
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.L
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_passwordL
# gem 'bcrypt', '~> 3.1.7'L

# Use Unicorn as the app serverL
# gem 'unicorn'L

# Use Capistrano for deploymentL
# gem 'capistrano-rails', group: :developmentL

group :development, :test do
  gem 'byebug'
  gem 'rspec-rails', '~> 3.0'
  gem 'capybara'
  gem 'database_cleaner'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in viewsL
  gem 'web-console', '~> 2.0'

  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/springL
  gem 'spring'
end
